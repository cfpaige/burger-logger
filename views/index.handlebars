<h1>EAT DA BURGER!</h1>

<div class="row">
  <div class="panel col-lg-5 not-devoured">
    <h4>These burgers are just begging to be devoured:</h4>
    <ul>
      {{#each burgers}}
      {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value=true>
          <button type="submit">Devour!</button>
        </form>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>

<div class="panel col-lg-5 devoured">
  <h4>Burgers That Have Been Devoured:</h4>
  <ul>
    {{#each burgers}}
    {{#if this.devoured}}
    <li>
      {{this.burger_name}}
      <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
      </form>
    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>

<h2>Add a Burger</h2>
<form action="burgers/create/" method="POST">
  <div class="form-group">
    <label>Burger Name:</label>
    <input type="text" name="name">
  </div>
  <button type="submit">Order</button>
</form>

