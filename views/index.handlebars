<div class="container">

  <div class="burger-list">
    <h4>Ready Now:</h4>
    <div>
      {{#each burgers}}
      {{#unless this.devoured}}
      <div class="burger-name">
        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
      <div class="form-group">
        <label>{{this.burger_name}}</label>
          <input type="hidden" name="devoured" value="true"><button type="submit">Devour It!</button>
      </div>
        </form>
      </div>
      {{/unless}}
      {{/each}}
    </div>
  </div>

  <div id="add-burger">
    <h3>New Order</h3>
    <form action="burgers/create/" method="POST">
      <div class="form-group">
        <label>Burger Name:</label>
        <input type="text" name="name"><button type="submit">Place Order</button>
      </div>
    </form>
  </div>

  <div class="burger-list">
    <h4>All Gone:</h4>
    <div>
      {{#each burgers}}
      {{#if this.devoured}}
      <div class="burger-name">
        {{this.burger_name}}
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>

</div>